<odoo>

    <record id="view_order_form_sale_auto" model="ir.ui.view">
        <field name="name">sale.order.form.auto</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_pay']" position="after">
                <group string="Technical" name="sale_auto">
                    <field name="hours_until_split"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
