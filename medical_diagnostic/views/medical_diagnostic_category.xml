<odoo>
    <record id="medical_diagnostic_category_view_form" model="ir.ui.view">
        <field name="name">Diagnostic Category - Form View</field>
        <field name="model">medical.diagnostic.category</field>
        <field name="arch" type="xml">
            <form string="Diagnostic Category">
                <sheet>
                    <div class="oe_title oe_left" name="title">
                        <h1>
                            <field name="code" placeholder="Code"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="buttons">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group name="data">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="medical_diagnostic_category_view_tree" model="ir.ui.view">
        <field name="name">Diagnostic Category - List View</field>
        <field name="model">medical.diagnostic.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="medical_diagnostic_category_view_search" model="ir.ui.view">
        <field name="name">Diagnostic Category - Search View</field>
        <field name="model">medical.diagnostic.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="medical_diagnostic_category_action" model="ir.actions.act_window">
        <field name="name">Diagnostic Categories</field>
        <field name="res_model">medical.diagnostic.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="medical_diagnostic_menu" name="Diagnostics" 
        parent="medical.medical_root" sequence="15"/>

    <menuitem id="medical_diagnostic_category_menu" name="Categories"
        parent="medical_diagnostic_menu" sequence="40" 
        action="medical_diagnostic_category_action"/>
</odoo>
