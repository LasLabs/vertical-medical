<odoo>
    <record id="medical_patient_view_form" model="ir.ui.view">
        <field name="name">Medical Patient - Diagnostic Buttons</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical.medical_patient_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_medical_buttons']">
                <button name="medical_diagnostic.medical_diagnostic_request_action" type="action" class="oe_stat_button"
                        icon="fa-list" context="{'search_default_patient_id': active_id}">
                    <field name="diagnostic_request_count" widget="statinfo" string="Requests"/>
                </button>
                <button name="medical_diagnostic.medical_diagnostic_report_action" type="action" class="oe_stat_button"
                        icon="fa-list" context="{'search_default_patient_id': active_id}">
                    <field name="diagnostic_report_count" widget="statinfo" string="Reports"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
