<odoo>
    <record id="medical_prescription_order_view_form" model="ir.ui.view">
        <field name="name">Prescription Order - Verification</field>
        <field name="model">medical.prescription.order</field>
        <field name='inherit_id' ref='medical_prescription.medical_prescription_order_view_form'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_verified']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Receiving" name="receiving">
                    <group string="General" name="receiving_general">
                        <group name="receiving_general_verification">
                            <field name="verify_method"/>
                            <field name="verify_date"/>
                            <field name="verify_user_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
