<odoo>
    <record id="medical_prescription_order_view_form" model="ir.ui.view">
        <field name="name">medical.prescription.order.form</field>
        <field name="model">medical.prescription.order</field>
        <field name='inherit_id' ref='medical_prescription_state_verify.medical_prescription_order_view_form'/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='receiving_general_verification']" position="after">
                <group name="receiving_general_receiving">
                    <field name="receive_method"/>
                    <field name="receive_date"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='receiving_general']" position="after">
                <group string="Pharmacy Transfer" name="receiving_transfer">
                    <field name="transfer_pharmacy_id"/>
                    <field name="transfer_direction"/>
                    <field name="transfer_ref"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
