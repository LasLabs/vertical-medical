<odoo>
    <record model="ir.rule" id="medical_practitioner_rule_public">
        <field name="name">medical.practitioner.rule.public</field>
        <field name="model_id" ref="medical_practitioner.model_medical_practitioner"/>
        <field name="groups" eval="[(4, ref('base.group_public'))]"/>
        <field name="domain_force">['|',
            ('is_verified', '=', True),
            ('create_uid', '=', user.id),
        ]</field>
    </record>

    <record model="ir.rule" id="medical_practitioner_rule_portal">
        <field name="name">medical.practitioner.rule.portal</field>
        <field name="model_id" ref="medical_practitioner.model_medical_practitioner"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">['|',
            ('is_verified', '=', True),
            ('create_uid', '=', user.id),
        ]</field>
    </record>
</odoo>
