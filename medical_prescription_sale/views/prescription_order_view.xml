<odoo>

    <record id="medical_prescription_order_form_view" model="ir.ui.view">
        <field name="name">Prescription Order</field>
        <field name="model">medical.prescription.order</field>
        <field name='inherit_id' ref='medical_prescription.medical_prescription_order_form_view'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_verified']" position="replace">
                <field name="receive_method" />
                <field name="verify_method" />
            </xpath>
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Receiving">
                    <group string="General">
                        <group>
                            <field name="receive_method" />
                            <field name="receive_date" />
                        </group>
                        <group>
                            <field name="verify_method" />
                            <field name="verify_date" />
                            <field name="verify_user_id" />
                        </group>
                    </group>
                    <group string="Pharmacy Transfer">
                        <field name="transfer_pharmacy_id" />
                        <field name="transfer_direction" />
                        <field name="transfer_ref" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
